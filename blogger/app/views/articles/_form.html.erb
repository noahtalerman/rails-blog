<%= form_for @article, html: { autocomplete: "off" } do |f| %>
    <ul>
        <% @article.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
    <p class="title_input">
        <%= f.label :title %>
        <br>
        <%= f.text_field :title %>
    </p>
    <p class="body_input">
        <%= f.label :body %>
        <br>
        <%= f.text_area :body %>
    </p>
    <p class="tags_input">
        <%= f.label :tag_list %>
        <br>
        <%= f.text_field :tag_list %>
    </p>
    <p class="submit_btn">
        <%= f.submit %>
    </p>
<% end %>