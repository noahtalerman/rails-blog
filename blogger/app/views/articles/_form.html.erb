<div class="outer_container">
    <div class="container">
        <%= form_for @article, html: { autocomplete: "off",  multipart: true } do |f| %>
            <ul>
                <% @article.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                <% end %>
            </ul>
            <p class="title_input">
                <%= f.label :title %>
                <br>
                <%= f.text_field :title %>
            </p>
            <p class="preview_input">
                <%= f.label :preview %>
                <br>
                <%= f.text_area :preview %>
            </p>
            <div class="image_input">
                <div>
                    <%= f.label :image, "Attatch a New Image" %>
                    <br>
                    <%= f.file_field :image %>
                </div>
                <% if @article.image.exists? %>
                    <figure class="img_mini">
                        <%= image_tag @article.image.url%>
                    </figure>
                <% end %>
            </div>
            <p class="body_input">
                <%= f.label :body %>
                <br>
                <%= f.text_area :body %>
            </p>
            <p class="tags_input">
                <%= f.label :tag_list %>
                <br>
                <%= f.text_field :tag_list %>
            </p>
            <p class="submit_btn">
                <%= f.submit %>
            </p>
        <% end %>
    </div>
</div>