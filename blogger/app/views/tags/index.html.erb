<div class="outer_container">
    <div class="container">
        <h1>All Tags</h1>

        <ul class="tags_list">
            <% @tags.each do |tag| %>
                <% if tag.articles.length > 0 %>
                    <li>
                        <%= link_to tag.name, tag_path(tag), class: 'tag_link' %>
                    </li>
                <% end %>
            <% end %>
        </ul>

        <%= link_to '<< Back to Articles List', articles_path, class: 'action_link' %>
    </div>
</div>