<button class="comment_btn">Post a Comment</button>

<%= form_for [ @article, @comment ] do |f| %>
    <p class="title_input">
        <%= f.label :author_name, "Your Name" %>
        <br>
        <%= f.text_field :author_name %>
    </p>
    <p class="body_input">
        <%= f.label :body, "Your Comment" %>
        <br>
        <%= f.text_area :body %>
    </p>
    <p class="submit_btn">
    <%= f.submit 'Submit' %>
    </p>
<% end %>